<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="328dp"
        android:layout_height="80dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/iconuser"
        android:drawableRight="@drawable/iconsetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="137dp"
        android:layout_height="42dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14">

        <LinearLayout
            android:layout_width="134dp"
            android:layout_height="23dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="108dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_semibold"
                android:text="Selamat Datang"
                android:textColor="@color/greyy"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iconhandshake" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_semibold"
            android:text="Naufal Nabbih A"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins_extrabold_italic"
        android:text="@string/GoSTADZ"
        android:textColor="@color/white"
        android:textSize="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="161dp"
        android:layout_height="376dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/gradient_background_customer"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16">

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="120dp"
            android:background="@drawable/gradient_background_customerv2"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/iconustadz"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_semibold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Ustadz"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="97dp"
            android:layout_height="165dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="Sebagai Ustadz kamu bisa membantu jamaah beribadah"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="161dp"
        android:layout_height="376dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/gradient_background_customer"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16">

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="120dp"
            android:background="@drawable/gradient_background_customerv2"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/iconjamaah"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_semibold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="Jamaah"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="97dp"
            android:layout_height="165dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="Sebagai Jamaah kamu bisa memenuhi kebutuhan ibadahmu"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="You can strengthen your faith anywhere"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>